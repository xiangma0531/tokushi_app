<% if admin_signed_in? %>
  <div class="contents-wrapper">
    <div class="contents">
      <% @sources.each do |source| %>
        <%= render partial: "source", locals: { source: source } %>
      <% end %>
    </div>
  </div>
<% elsif user_signed_in? %>
  <p>検索ボックスから検索してください</p>
<% else %>
  上のボタンからログインおよび新規登録してください
<% end %>
<%= form_with(url: search_sources_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "検索", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>